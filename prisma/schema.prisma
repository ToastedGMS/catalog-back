// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Store {
  id       String   @id @default(uuid()) @db.Uuid
  name     String   @db.VarChar(100) @unique 
  slug     String   @db.VarChar(100) @unique 
  color    String   @db.VarChar(7) 
  logo     String   @db.VarChar(2048) @default("https://placehold.co/150x150/?font=playfair-display&text=Placeholder") 
  whatsapp String   @db.VarChar(20) 
  products Product[]
  categories Category[]
  users      User[]
}

model Product {
  id             String    @id @default(uuid()) @db.Uuid
  name           String    @db.VarChar(100) 
  description    String    
  price          Decimal   @db.Decimal(12, 2) 
  imageUrl       String    @db.VarChar(2048) @default("https://placehold.co/600x600/?font=playfair-display&text=Placeholder") 
  onSale         Boolean   @default(false)
  isHighlight    Boolean   @default(false)
  previousPrice  Decimal?  @db.Decimal(12, 2) 
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  isService      Boolean   @default(false)
  
  categoryId     String    @db.Uuid 
  category       Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  storeId        String    @db.Uuid 
  store          Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
}

model Category {
  id       String   @id @default(uuid()) @db.Uuid
  name     String   @db.VarChar(50) 
  position Int      @default(autoincrement())
  products Product[]
  
  storeId  String   @db.Uuid 
  store    Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@unique([name, storeId])
}

enum UserRole {
  null
  admin
  catalog_manager
  super_admin
}

model User {
  id           String        @id @default(uuid()) @db.Uuid
  password     String        
  username     String        @db.VarChar(50) @unique 
  role         UserRole      @default(null)
  activityLogs ActivityLog[]
  
  storeId      String?       @db.Uuid 
  store        Store?        @relation(fields: [storeId], references: [id], onDelete: Cascade)
}

model ActivityLog {
  id           String   @id @default(uuid()) @db.Uuid
  
  userId       String?  @db.Uuid
  action       String   @db.VarChar(100)
  metadata     Json?
  timestamp    DateTime @default(now())
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}