generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id Int @id @default(autoincrement())
  name String @unique
  slug String @unique
  color String
  logo String @default("https://placehold.co/150x150/?font=playfair-display&text=Placeholder")
  whatsapp String
  products Product[]
  categories Category[]
  users User[]
}

model Product {
  id Int @id @default(autoincrement())
  name String @unique
  description String @db.VarChar(255)
  price Decimal @db.Decimal(10, 2)
  imageUrl String @default("https://placehold.co/600x600/?font=playfair-display&text=Placeholder")
  onSale Boolean @default(false)
  isHighlight Boolean @default(false)
  previousPrice Decimal? @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isService Boolean @default(false)
  categoryId Int
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  storeId Int
  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)
}

model Category {
  id Int @id @default(autoincrement())
  name String @unique
  position Int @default(autoincrement())
  products Product[] 
  storeId Int
  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)
}

enum UserRole {
  admin
  catalog_manager
}

model User {
  id Int @id @default(autoincrement())
  password String
  username String @unique
  role UserRole @default(admin)
  activityLogs ActivityLog[]
  storeId Int
  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)
}

model ActivityLog {
  id           Int      @id @default(autoincrement())
  userId       Int?
  action       String   @db.VarChar(255)
  metadata     Json?    
  timestamp    DateTime @default(now())
  user         User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}
